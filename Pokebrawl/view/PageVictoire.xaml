<Page x:Class="Pokebrawl.view.PageVictoire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pokebrawl.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageVictoire">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image/fond/win.jpg" Stretch="Fill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Victoire !" 
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="Gold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="0" Opacity="0.7"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="Félicitations, tu es devenu un véritable dresseur Pokémon !" 
                       FontSize="22"
                       Foreground="White"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button Content="Retour au menu" 
                    Width="200" Height="45" 
                    Background="#FF388E3C"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Click="RetourMenu_Click"/>
        </StackPanel>
    </Grid>
</Page>
