<Window x:Class="Pokebrawl.view.PageGameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokebrawl.view"
        mc:Ignorable="d"
        Title="PageGameOver" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Game Over" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Retour au menu" Width="180" Height="40" Click="RetourMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
