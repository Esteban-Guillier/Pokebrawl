<Page x:Class="Pokebrawl.view.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokebrawl.view"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <!-- Fond d'écran -->
        <Grid.Background>
            <ImageBrush ImageSource="image/Fond/Intro.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- Contenu principal -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Bouton Équipe à gauche -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Équipe" Width="150" Height="50" Click="Equipe_Click"/>
            </StackPanel>

            <!-- Avatar + Équipe en bas -->
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="20">
                <!-- Avatar joueur -->
                <Image x:Name="AvatarImage" Width="100" Height="100" Margin="5"/>

                <!-- Équipe Pokémon -->
                <ItemsControl ItemsSource="{Binding Equipe}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageFace}" Width="80" Height="80" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Bouton Combat à droite -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Combat" Width="150" Height="50" Click="Combat_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
