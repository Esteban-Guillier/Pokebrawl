<Page x:Class="Pokebrawl.view.PageEquipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Pokebrawl.view"
      mc:Ignorable="d"
      Title="Equipe">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="image/fond/pc.png" Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Liste des Pokémon starters -->
        <ListBox Name="StartersList"
         Grid.Row="0"
         SelectionMode="Single"
         Background="Transparent"
         BorderThickness="0"
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Top"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         Width="800">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                       ItemWidth="140"
                       ItemHeight="140"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="DarkSlateBlue"
                    Background="#99FFFFFF"
                    Margin="8"
                    Padding="8">
                        <StackPanel Orientation="Vertical"
                            Width="120"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Image Source="{Binding ImageFace}"
                           Height="60"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Nom}" 
                               FontWeight="Bold" 
                               FontSize="15"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               Foreground="#222"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxWidth="110"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Affichage de l'équipe -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <ItemsControl Name="EquipeList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Source="{Binding ImageFace}" Width="60" Height="60"/>
                            <Button Content="Retirer" Click="Retirer_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Name="PointsText" Margin="20,0"/>
        </StackPanel>
        <Button Content="Retour" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"
                Click="Retour_Click"/>
    </Grid>
</Page>